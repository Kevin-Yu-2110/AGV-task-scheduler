<UserControl x:Class="AGV_task_scheduler.Components.AGVPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AGV_task_scheduler.Components" xmlns:viewmodels="clr-namespace:AGV_task_scheduler.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="AGVs" Margin="5" FontSize="20" HorizontalAlignment="Center"/>
            <DataGrid Grid.Row="1" ItemsSource="{Binding Store}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="2">
                <Button Content="Add AGV" FontSize="15" Padding="0 10 0 10" DataContext="{Binding AddAgvCommand}"/>
                <Button Content="Remove AGV" FontSize="15" Padding="0 10 0 10" DataContext="{Binding RemoveAGVCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
