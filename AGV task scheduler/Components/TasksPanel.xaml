<UserControl x:Class="AGV_task_scheduler.Components.TasksPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AGV_task_scheduler.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Tasks" Margin="5" FontSize="20" HorizontalAlignment="Center"/>
            <DataGrid Grid.Row="1" ItemsSource="{Binding Tasks}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task Description" Binding="{Binding TaskDescription}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="2">
                <Button Content="Add Task" FontSize="15" Padding="0 10 0 10" DataContext="{Binding AddTaskCommand}"/>
                <Button Content="Assign Task" FontSize="15" Padding="0 10 0 10" DataContext="{Binding AssignTaskCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
